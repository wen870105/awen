<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
		
	@author Wen
 	@since 2017-01-18 
 	生成工具备注:ID大写的为BaseDao方法提供通用方法,如果不需要就删除
-->
<mapper namespace="com.wen.dao.ExportWenDao">
	
	<resultMap id="ExportWen-Map" type="ExportWen">
		<result property="createTime" column="create_time"/>
		<result property="recordUrl" column="record_url"/>
		<result property="id" column="id"/>
	</resultMap>
	
	<insert id="add_" keyProperty="id" useGeneratedKeys="true">
		insert into export_wen
		( create_time, record_url, id)
		values
		( #{createTime}, #{recordUrl}, #{id})
	</insert>
	
	<select id="getById_" resultMap="ExportWen-Map">
		select * from export_wen where id = #{value}
	</select>
	
	<sql id="querySql">
		select * from export_wen where record_url != ''
			<if test="createTime != null and createTime != '' ">
				and create_time = #{createTime}
			</if>
			<if test="recordUrl != null and recordUrl != '' ">
				and record_url = #{recordUrl}
			</if>
			<if test="id != null and id != '' ">
				and id = #{id}
			</if>
	</sql>
	
	<select id="findList_" resultMap="ExportWen-Map" parameterType="ExportWen">
		<include refid="querySql"/>
	</select>
	
	<update id="update_" parameterType="ExportWen">
		update export_wen 
			<set>
			<if test="createTime != null and createTime != '' ">
				create_time = #{createTime},
			</if>
			<if test="recordUrl != null and recordUrl != '' ">
				record_url = #{recordUrl},
			</if>
			<if test="id != null and id != '' ">
				id = #{id},
			</if>
			</set>
			where id = #{id}
	</update>


	<select id="queryPageCount" resultType="int" parameterType="ExportWen">
		select count(1) from (
			<include refid="querySql"/>
		) tmp
	</select>
	
	<select id="queryPage" resultMap="ExportWen-Map" parameterType="ExportWen">
		<include refid="querySql"/>
		limit #{start}, #{offset}
	</select>

</mapper>