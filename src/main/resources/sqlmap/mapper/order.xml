<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wen.dao.OrderDao">

	<resultMap id="Order-Map" type="Order">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="createDate" column="create_date" />
	</resultMap>

	<insert id="add_" useGeneratedKeys="true" keyProperty="id">
		insert into order1
		( name,	create_date)
		values
		( #{name}, #{createDate})
	</insert>

	<!-- 根据ID获取参数信息 -->
	<select id="getById_" parameterType="java.lang.Long"
		resultMap="Order-Map">
		SELECT * FROM order1 where id = #{id}
	</select>
</mapper>